{
  "name": "acme/wp-plugin-devtools",
  "description": "Dev tooling for WordPress plugin (PHPCS/WPCS, PHPStan). Not required at runtime.",
  "type": "project",
  "require": {},
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.1",
    "phpstan/phpstan": "^1.11",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "lint": "find . -type f -name \"*.php\" -not -path \"./vendor/*\" -print0 | xargs -0 -n1 -P4 php -l",
    "phpcs": "phpcs -q --standard=phpcs.xml.dist",
    "phpcbf": "phpcbf --standard=phpcs.xml.dist",
    "phpstan": "phpstan analyse --no-progress --configuration=phpstan.neon.dist"
  }
}
